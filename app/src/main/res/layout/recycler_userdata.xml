<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/bluedrawer"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cv_UserData"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/white"
                app:civ_border_color="#fff"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="@color/colorBlue"
                android:src="@drawable/ic_user_new"
                android:elevation="5px"
                android:paddingRight="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/tv_UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jerry Erlangga"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:fontFamily=""/>
                <TextView
                    android:id="@+id/tv_PositionName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HRD Manager"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="italic"
                    android:fontFamily=""/>
                <TextView
                    android:id="@+id/tv_DivisionName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Div. Goverment &amp; IT"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:fontFamily=""/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>